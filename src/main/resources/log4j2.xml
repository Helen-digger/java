<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
<Properties>
    <Property name="log-path"> logs </Property>
</Properties>
<Appenders>
    <File name="fileloggerfile" fileName="${basePath}/logs.log" immediateFlush="false" append="false">
        <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </File>
    <RollingFile name="fileLogger" fileName="${basePath}/log.html"
                 filePattern="debag-backup-%d{MM-dd-yy-HH-mm-ss}-%i.html.gz">
        <HTMLLayout charset="UTF-8" title="Logs in Dashboard" locationInfo="true" />
        <Policies>
            <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            <SizeBasedTriggeringPolicy size="10 MB" />
        </Policies>
    </RollingFile>
    <Console name="console" target="SYSTEM_OUT">
        <PatternLayout   pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
    </Console>
</Appenders>
<Loggers>
    <Logger name="org.springframework.web" level="info" additivity="false">
        <AppenderRef ref="SpringBoot-Appender" />
        <AppenderRef ref="Console-Appender" />
    </Logger>
    <Logger name="com.example.client_vaadin" level="debug" additivity="false">
        <appender-ref ref="fileLogger" level="debug" />
    </Logger>
    <Logger name="com.example.client_vaadin" level="debug" additivity="false">
        <appender-ref ref="fileLoggerfile" level="debug" />
    </Logger>
    <Root level="debug" additivity="false">
        <appender-ref ref="console" />
    </Root>
</Loggers>
</Configuration>